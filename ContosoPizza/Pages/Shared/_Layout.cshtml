@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContosoPizza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContosoPizza.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ContosoPizza</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(HttpContextAccessor.HttpContext.Session.Keys.Contains("UserRole"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Customers/Edit?id=@HttpContextAccessor.HttpContext.Session.GetInt32("UserId").ToString()">Your Information</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Coupons/Index">Available Coupons</a>
                            </li>
                        }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">Products</a>
                            </li>
                        @if (HttpContextAccessor.HttpContext.Session.Keys.Contains("UserRole"))
                        {
                            @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Customer")
                            {
                                <li class="nav-item ms-auto">
                                    <a class="nav-link text-dark" href="/Cart">YOUR CART</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Orders/Index">ORDERS HISTORY</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Logout">LOGOUT</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item ms-auto">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Logout">LOGOUT</a>
                                </li>
                            }
                        }else
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark" href="/Cart">YOUR CART</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/LoginCustomer">LOGIN</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Customers/Create">REGISTER</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ContosoPizza - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>