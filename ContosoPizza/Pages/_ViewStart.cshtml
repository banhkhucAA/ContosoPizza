@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "_Layout";
    var userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");

    if (userRole == "Admin")
    {
        Layout = "_LayoutAdmin";
    }
    else if (userRole == "Employee")
        Layout = "_LayoutEmployee";

    if (string.IsNullOrEmpty(userRole))
    {
        Layout = "_Layout";
    }
}

